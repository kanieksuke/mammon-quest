<h2>これでよろしいですか？</h2>
<% @targets.each do |target| %>
  <div class='text'>
    目標金額:<%= target.target_amount %>円
  </div>
  <div class='text'>
    目標期日:<%= target.target_date %>日
  </div>
  <% break %>
<% end %>
<% @budgets.each do |budget| %>
  <div class='text'>
    先月の収入:<%= budget.income %>円
  </div>
  <div class='text'>
    先月の固定費:<%= budget.fixed_cost %>円
  </div>
  <% break %>
<% end %>
<div class='link'>
  <%= link_to "戦闘開始!", root_path(@targets), method: :get %>
