<div class="wrapper">
  <div>
    <h2 class="welcome-mammon-quest">マモンクエストへようこそ！</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "error-message") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-bottom">
        <%= f.label "Eメールアドレスを入力してください" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-bottom">
        <%= f.label "パスワードを設定してください" %>
        <% if @minimum_password_length %>
        <em><br />(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-bottom">
        確認のため、もう一度パスワードを入力してください<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-submit">
        <%= f.submit "目標を設定する" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>